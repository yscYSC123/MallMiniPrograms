
.input{
    padding: 20rpx;
    color: #666666;
    font-weight: bold;
    font-size: 22rpx;
    background-color: white;
    border-bottom: 1rpx solid #eee;
    border-radius: 10rpx 10rpx 0 0;
}

/* 宫格列表 */
.nx_congar{
    margin: 20rpx;
}

/* 行列表 */
.nx_line{
    margin: 20rpx;
}
.nx_line_list{
    background-color: white;
    border-radius: 0 0 10rpx 10rpx;
}
.nx_line_list .nx_line_item{
    width: 100%;
    display: flex;
    padding: 20rpx;
    border-bottom: 1px solid #eee;
}

.nx_line_left{
    flex: 2;
    display: flex;
    align-items: center;
}
.nx_line_mid{
    flex: 8;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    color: #999;
    padding: 0 40rpx;
}
.nx_line_right{
    flex: 1;
    display: flex;
    align-items: center;
    justify-content: center;
    color: #999;
}
.nx_line_left image{
    width: 100%;
    height: 100rpx;
}